{
  "name": "api",
  "version": "1.0.0",
  "description": "A user management application API built with TSOA, Inversify, TypeORM, and MongoDB.",
  "keywords": [
    "tsoa",
    "inversify",
    "nosql",
    "sql"
  ],
  "homepage": "https://github.com/jadogeri/user_management_app#readme",
  "bugs": {
    "url": "https://github.com/jadogeri/user_management_app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jadogeri/user_management_app.git"
  },
  "license": "MIT",
  "author": "Joseph Adogeri",
  "type": "commonjs",
  "main": "./src/server.ts",
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs --dataSource ./src/configs/typeOrm.config.ts",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create ./src/migrations/InitialSchemaSetup",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/migrations/InitialSchemaSetup --dataSource ./src/configs/typeOrm.config.ts --pretty",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run --dataSource ./src/configs/typeOrm.config.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert --dataSource ./src/configs/typeOrm.config.ts",
    "prod": "concurrently \"npm run build -- --watch\" \"ts-node-dev --respawn --watch src,swagger.json src/server.ts\"",
    "seeder": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run --dataSource ./src/configs/typeOrm.config.ts",
    "clean": "rm -rf build/",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node ./build/src/server.js",
    "dev": "ts-node-dev ./src/server.ts",
    "app:dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "app:build": "tsoa spec-and-routes && tsc",
    "app:start": "node build/src/server.js",
    "hr": "nodemon",
    "sr": "tsoa spec-and-routes",
    "predev1": "npm run swagger-gen && npm run routes-gen",
    "dc": "concurrently \"tsc --watch\" \"nodemon dist/server.js\"",
    "swagger-gen": "tsoa spec",
    "routes-gen": "tsoa routes",
    "test": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=.test.env jest --setupFiles dotenv/config && jest --config=jest.config.ts --coverage  --testPathPatterns=tests/ --runInBand --colors --verbose --detectOpenHandles"
  },
  "dependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@faker-js/faker": "^10.1.0",
    "@tsoa/runtime": "^6.6.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^2.2.0",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "email-templates": "^2.7.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "inversify": "^7.10.4",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.5.0",
    "jsonwebtoken": "^9.0.3",
    "jwt-check-expiry": "^1.0.10",
    "jwt-decode": "^4.0.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.16.0",
    "nanoid": "^5.1.6",
    "nanoid-dictionary": "^5.0.0",
    "nodemailer": "^6.9.14",
    "nodemailer-juice": "^1.0.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.28",
    "typeorm-extension": "^3.7.3"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/email-templates": "^10.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "testcontainers": "^11.9.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsoa": "^6.6.0",
    "typescript": "^5.9.3"
  }
}
